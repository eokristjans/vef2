{
  "name": "hopverkefni-2",
  "version": "1.0.0",
  "description": "Verkefnið felst í því að smíða vef sem birtir upplýsingar um fyrirlestra námskeiðsins",
  "main": "index.js",
  "scripts": {
    "eslint": "eslint ./src/**/*.js",
    "browser-sync": "browser-sync start --server --files index.html fyrirlestur.html ./dist/styles.css ./dist/bundle.js",
    "stylelint": "stylelint ./src/styles/**/*.scss --syntax scss",
    "sass": "node-sass --source-map-embed ./src/styles/styles.scss ./dist/styles.css",
    "sass-watch": "node-sass --source-map-embed --watch --recursive src/styles/styles.scss ./dist/styles.css",
    "test": "concurrently npm:eslint npm:stylelint",
    "dev": "concurrently npm:sass npm:sass-watch npm:browser-sync npm:rollup-watch",
    "rollup": "rollup -c",
    "rollup-watch": "rollup -c -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eokristjans/vef1-h2.git"
  },
  "keywords": [],
  "author": "Alexander Þór, Andrea Ósk og Erling Óskar",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "browser-sync": "^2.27.10",
    "concurrently": "^4.1.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "rollup": "^0.67.3",
    "rollup-plugin-babel": "^4.0.3",
    "stylelint": "^9.7.1",
    "stylelint-config-primer": "^2.2.11"
  },
  "bugs": {
    "url": "https://github.com/eokristjans/vef1-h2/issues"
  },
  "homepage": "https://github.com/eokristjans/vef1-h2#readme",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "ajv": "^6.0.0",
    "node-sass": "^4.9.4"
  }
}
